<body>
  <h1>Birthday Countdown</h1>
  <div class="container">
    <input type="text" id="nameInput" placeholder="Enter your name">
    <input type="date" id="dateInput">
    <button onclick="startCountdown()">Start Countdown</button>
    <button onclick="resetCountdown()">Reset</button>

    <div id="countdownContainer" style="display:none;">
      <h2 id="greeting"></h2>
      <div class="countdown">
        <div><span id="days">00</span><div class="small-text">Days</div></div>
        <div><span id="hours">00</span><div class="small-text">Hours</div></div>
        <div><span id="minutes">00</span><div class="small-text">Minutes</div></div>
        <div><span id="seconds">00</span><div class="small-text">Seconds</div></div>
      </div>
      <div class="share-link" onclick="copyShareLink()" id="shareLink"></div>
    </div>
  </div>

  <script>
    let countdownInterval;

    function formatTwo(n) {
      return n.toString().padStart(2, '0');
    }

    function calculateNextBirthday(dateString) {
      const now = new Date();
      const b = new Date(dateString + 'T00:00:00');
      let next = new Date(now.getFullYear(), b.getMonth(), b.getDate());
      if (next < now) {
        next.setFullYear(next.getFullYear() + 1);
      }
      return next;
    }

    function startCountdown() {
      const name = document.getElementById('nameInput').value.trim();
      const date = document.getElementById('dateInput').value;

      if (!name || !date) {
        alert('Please enter both name and date.');
        return;
      }

      localStorage.setItem('birthdayName', name);
      localStorage.setItem('birthdayDate', date);

      const params = new URLSearchParams();
      params.set('name', name);
      params.set('date', date);
      const newUrl = window.location.origin + window.location.pathname + '?' + params.toString();
      window.history.replaceState({}, '', newUrl);

      document.getElementById('greeting').textContent = `Countdown for ${name}`;
      document.getElementById('countdownContainer').style.display = 'block';

      if (countdownInterval) clearInterval(countdownInterval);
      countdownInterval = setInterval(() => updateCountdown(date), 1000);
      updateCountdown(date);
    }

    function updateCountdown(dateString) {
      const next = calculateNextBirthday(dateString);
      const now = new Date();
      let diff = Math.max(0, next - now);

      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      diff -= days * (1000 * 60 * 60 * 24);
      const hours = Math.floor(diff / (1000 * 60 * 60));
      diff -= hours * (1000 * 60 * 60);
      const minutes = Math.floor(diff / (1000 * 60));
      diff -= minutes * (1000 * 60);
      const seconds = Math.floor(diff / 1000);

      document.getElementById('days').textContent = formatTwo(days);
      document.getElementById('hours').textContent = formatTwo(hours);
      document.getElementById('minutes').textContent = formatTwo(minutes);
      document.getElementById('seconds').textContent = formatTwo(seconds);

      const shareLink = `${window.location.origin + window.location.pathname}?name=${encodeURIComponent(document.getElementById('nameInput').value)}&date=${dateString}`;
      document.getElementById('shareLink').textContent = `Shareable link: ${shareLink}`;
    }

    function resetCountdown() {
      document.getElementById('nameInput').value = '';
      document.getElementById('dateInput').value = '';
      document.getElementById('countdownContainer').style.display = 'none';
      if (countdownInterval) clearInterval(countdownInterval);
      window.history.replaceState({}, '', window.location.pathname);
      localStorage.removeItem('birthdayName');
      localStorage.removeItem('birthdayDate');
    }

    function copyShareLink() {
      const link = document.getElementById('shareLink').textContent.replace('Shareable link: ', '');
      navigator.clipboard.writeText(link).then(() => {
        alert('Link copied to clipboard!');
      });
    }

    window.addEventListener('load', () => {
      const params = new URLSearchParams(window.location.search);
      const name = params.get('name');
      const date = params.get('date');
      if (name && date) {
        document.getElementById('nameInput').value = name;
        document.getElementById('dateInput').value = date;
        startCountdown();
      } else {
        const savedName = localStorage.getItem('birthdayName');
        const savedDate = localStorage.getItem('birthdayDate');
        if (savedName && savedDate) {
          document.getElementById('nameInput').value = savedName;
          document.getElementById('dateInput').value = savedDate;
          startCountdown();
        }
      }
    });
  </script>
</body>
</html>
