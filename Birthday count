  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Birthday Countdown</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #fdfbfb, #ebedee);
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      min-height: 100vh;
    }
    h1 {
      font-size: 2.2em;
      margin-bottom: 25px;
      color: #ff6f61;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }
    .container {
      background: #fff;
      padding: 25px 35px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      max-width: 450px;
      width: 100%;
      text-align: center;
    }
    input[type="text"], input[type="date"] {
      width: 100%;
      padding: 12px;
      margin: 8px 0 18px 0;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 16px;
    }
    button {
      padding: 12px 20px;
      margin: 5px;
      border: none;
      border-radius: 8px;
      background-color: #ff6f61;
      color: white;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
    }
    button:hover {
      background-color: #e65b50;
    }
    .countdown {
      display: flex;
      justify-content: space-around;
      margin: 25px 0;
      font-size: 22px;
      flex-wrap: wrap;
    }
    .countdown div {
      background: #ffe5e0;
      color: #ff3b2e;
      padding: 15px 10px;
      border-radius: 12px;
      min-width: 70px;
      margin: 5px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }
    .small-text {
      font-size: 14px;
      color: #7a7a7a;
      margin-top: 5px;
    }
    .share-link {
      margin-top: 15px;
      word-break: break-all;
      color: #007BFF;
      cursor: pointer;
      font-size: 14px;
    }
    @media(max-width: 480px){
      .countdown {
        font-size: 18px;
      }
      .countdown div {
